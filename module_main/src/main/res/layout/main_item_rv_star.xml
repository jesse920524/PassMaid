<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_item_star_see"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_visibility_grey600_48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                />
            <ImageView
                android:id="@+id/iv_item_star_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                />

            <TextView
                android:id="@+id/tv_item_star_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test title"
                android:textColor="@color/grey_700"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_alignTop="@id/iv_item_star_avatar"
                android:layout_toRightOf="@id/iv_item_star_avatar"
                android:layout_marginTop="-10dp"/>
            <TextView
                android:id="@+id/tv_item_star_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test description"
                android:textColor="@color/grey_500"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_below="@id/tv_item_star_title"
                android:layout_toRightOf="@id/iv_item_star_avatar"/>
            <TextView
                android:id="@+id/tv_item_star_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="********"
                android:textColor="@color/grey_500"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_below="@id/tv_item_star_account"
                android:layout_toRightOf="@id/iv_item_star_avatar"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

